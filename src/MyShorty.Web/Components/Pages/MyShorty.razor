@page "/myshorty"
@inject Services.MyShortyService MyShortyService
@inject IJSRuntime JS

<h3>MyShorty</h3>

<div class="card p-4" style="max-width:720px;">
    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="originalUrl" class="form-label">Original URL</label>
            <InputText id="originalUrl" class="form-control" @bind-Value="model.OriginalUrl" />
            <ValidationMessage For="@(() => model.OriginalUrl)" />
        </div>

        <div class="mb-3">
            <button class="btn btn-primary" type="submit" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ms-2">Generating…</span>
                }
                else
                {
                    <span>Generate Short URL</span>
                }
            </button>
            <button type="button" class="btn btn-link ms-2" @onclick="Clear">
                Clear
            </button>
        </div>
    </EditForm>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(resultShortUrl))
    {
        <div class="mt-3">
            <label class="form-label">Short URL</label>
            <div class="input-group">
                <a class="form-control text-truncate" href="@resultShortUrl" target="_blank" rel="noopener">@resultShortUrl</a>
                <button class="btn btn-outline-secondary" @onclick="CopyToClipboard">Copy</button>
            </div>
            <div class="form-text mt-1">Click the link to visit the destination.</div>
        </div>
    }
</div>

@code {
    private ShortenModel model = new();
    private bool isLoading;
    private string errorMessage;
    private string resultShortUrl;

    // You can inject a base URL for the shortener if needed (e.g., https://sho.rt/)
    // [Inject] public NavigationManager Nav { get; set; }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        resultShortUrl = null;

        // Basic client-side validation
        if (string.IsNullOrWhiteSpace(model.OriginalUrl))
        {
            errorMessage = "Please enter a URL.";
            return;
        }

        try
        {
            isLoading = true;

            // Call your service (expected to return the full short URL or short code)
            var shortResult = await MyShortyService.GenerateShortUrl(model.OriginalUrl);

            if (string.IsNullOrWhiteSpace(shortResult))
            {
                errorMessage = "Shortener returned an empty result.";
            }
            else
            {
                // If your service returns just a code, join with your base URL:
                if (shortResult.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                    resultShortUrl = shortResult;
                else
                    resultShortUrl = $"{shortResult}"; // e.g., $"{BaseShortenerUrl}/{shortResult}" adjust as needed
            }
        }
        catch (Exception ex)
        {
            // Keep the message friendly but helpful for debugging
            errorMessage = "Failed to generate short URL. " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Clear()
    {
        model = new ShortenModel();
        resultShortUrl = null;
        errorMessage = null;
    }

    private async Task CopyToClipboard()
    {
        if (string.IsNullOrEmpty(resultShortUrl)) return;
        try
        {
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", resultShortUrl);
        }
        catch
        {
            // Fallback alert or set an error message — ignore silently if clipboard not available
            errorMessage = "Copy to clipboard failed. Try selecting the link and copying manually.";
        }
    }

    public class ShortenModel
    {
        [Required]
        [Url(ErrorMessage = "Please enter a valid URL (include http/https).")]
        public string OriginalUrl { get; set; } = string.Empty;
    }
}
